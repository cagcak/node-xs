{
  "name": "node-xs",
  "version": "0.0.1",
  "description": "Decorated state machine for Nodejs projects",
  "main": "./lib/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/index.d.ts",
  "libraryTarget": "commonjs",
  "author": "",
  "license": "ISC",
  "repository": {
    "url": "https://github.com/cagcak/node-xs.git"
  },
  "files": [
    "./lib"
  ],
  "scripts": {
    "tsc": "node ./node_modules/typescript/bin/tsc",
    "mocha": "node ./node_modules/mocha/bin/mocha.js",
    "rimraf": "node ./node_modules/rimraf/bin.js",
    "webpack": "node ./node_modules/webpack/bin/webpack.js",
    "clean": "npm run rimraf lib lib-esm _bundles",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register --require mocha-suppress-logs 'tests/**/*.spec.ts'",
    "prebuild": "npm test && npm run clean",
    "build": "npm run tsc -- -p ./tsconfig.json",
    "postbuild": "npm run webpack",
    "prepublish": "npm run build",
    "bundle": "npm run build -- -m es6 --outDir lib-esm"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "@types/node": "^12.20.2",
    "@types/rewire": "^2.5.28",
    "awesome-typescript-loader": "^5.2.1",
    "chai": "^4.3.6",
    "mocha": "^10.1.0",
    "mocha-suppress-logs": "^0.3.1",
    "rewire": "^6.0.0",
    "rimraf": "^3.0.2",
    "terser-webpack-plugin": "^5.3.6",
    "ts-node": "^10.9.1",
    "typescript": "^4.0.5",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-node-externals": "^3.0.0"
  },
  "engines": {
    "node": ">=12.20.2"
  },
  "engineStrict": true
}
